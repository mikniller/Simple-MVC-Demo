
@{
    ViewBag.Title = "Index3";
}


<div class="row">

    <div class="col-md-6">
        <h2>View</h2>
        <p>
            <ol>
                <li>Razor syntax <a href="javascript:toggle('#razor')">Vis</a></li>
            </ol>
        </p>
    </div>

    <div class="col-md-6">
        <div id="razor" class="hide">
            <h2>Razor syntax</h2>
            @Html.Action("razor", "View")
        </div>
    </div>

</div>


@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $(".file-info").click(function () {

                $.get('@(Url.Action("Info", "api/File"))?file=' + $(this).data('file'), function (data) {
                    console.log(data);
                    $("#content-info").html('<pre>' + data.FileContent + '</pre>');
                });
            });
        });

        toggle = function (id) {
            $('#razor').addClass('hide');
            $(id).removeClass('hide');
        }
    </script>
}




